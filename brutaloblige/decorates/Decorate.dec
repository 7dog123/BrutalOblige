actor SkyboxRainDrop : SimpleRAinDrop
{
	scale 0.6
	States
  {
  Spawn:
	TNT1 A 0
	TNT1 A 0 A_CheckFloor("Nope")
  Live:	
    RNDA ABCDEFGHIJKLMNOPQRSTUVWXYZ 1
    RNDR BCDEFGH 1
    Loop
  Nope:
    TNT1 A 0
	Stop
  }
}

