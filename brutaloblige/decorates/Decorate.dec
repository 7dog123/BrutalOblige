Actor FloatingAshLight
{
  +Missile
  +NoBlockmap
  +NoGravity
  Radius 1
  Height 1
  RenderStyle Shaded
  StencilColor "A0 A0 A0"
  Scale 0.15
  ReactionTime 250
  States
  {
  Spawn:
    ASHX A 0
    ASHX A 0 A_SetScale(FRandom(0.09, 0.12))
    ASHX A 0 A_Jump(128, "Spawn2")
  Spawn1:
    ASHX ABCDEFGH 2 A_CountDown
    Loop
  Spawn2:
    ASHX HGFEDCBA 2 A_CountDown
    Loop
  Death:
    ASHX F 2 A_FadeOut(0.06)
    Loop
  }
}

